{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "HyperNote",
  "version": "0.1.0",
  "identifier": "com.hypernote.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "HyperNote",
        "width": 1280,
        "height": 840,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": []
  }
}
